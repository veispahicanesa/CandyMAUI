<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CandyMAUI.Pages.CheckoutPage"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             Title="Račun">
    <VerticalStackLayout VerticalOptions="Center"
                         HorizontalOptions="Center"
                         Spacing="10">

        <Image x:Name="img" Source="check_mark.png"
               HeightRequest="150"
               WidthRequest="150">

            <Image.Behaviors>
                <toolkit:IconTintColorBehavior TintColor="Green"/>
            </Image.Behaviors>
        </Image>

        <Label x:Name="msg" Text="Uspješno poručeno"
               FontSize="30"
               TextColor="Green"/>

        <Button x:Name="homeBtn" Text="Vratite se na početni ekran"
                BackgroundColor="#d2b48c"
                CornerRadius="22"
                HorizontalOptions="Center"
                Padding="50,10"
                Clicked="homeBtn_Clicked"/>
    </VerticalStackLayout>
</ContentPage>
